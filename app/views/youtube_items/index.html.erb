<%- model_class = YoutubeItem -%>
<div class="page-header">
  <h1><br></h1>
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<div id="em_linha">
	<div id="btn_margens">
		<%= link_to t('.new', :default => t("helpers.links.new")),
			    new_youtube_item_path,
			    :class => 'btn btn-primary' %>
	</div>
</div>

<div id="tb_centrar">
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:id) %></th>
	      <th><%= model_class.human_attribute_name(:item) %></th>
	      <th><%= model_class.human_attribute_name(:nome) %></th>
	      <th><%= model_class.human_attribute_name(:descricao) %></th>
	      <th><%= model_class.human_attribute_name(:created_at) %></th>
	      <th><%=t '.actions', :default => t("helpers.actions") %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @youtube_items.each do |youtube_item| %>
	      <tr>
		<td><%= link_to youtube_item.id, youtube_item_path(youtube_item) %></td>
		<td><%= youtube_item.item %><br>
		    <iframe width='300px' height='120px' src='http://www.youtube.com/embed/<%= youtube_item.item %>' frameborder='0' allowfullscreen></iframe>
		</td>
		<td><%= youtube_item.nome %></td>
		<td><%= youtube_item.descricao %></td>
		<td><%=l youtube_item.created_at %></td>
		<td>
		  <%= link_to t('.edit', :default => t("helpers.links.edit")),
		              edit_youtube_item_path(youtube_item), :class => 'btn btn-mini' %>
		  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
		              youtube_item_path(youtube_item),
		              :method => :delete,
		              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
		              :class => 'btn btn-mini btn-danger' %>
		</td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
</div>

<dl class="dl-horizontal">
</dl>

<div class="form-actions">
	<a data-no-turbolink='true' class="btn" href="/">Back</a>
</div>
