/* Modal overlay styling */
#overlay {

}

/* Modal  500 x 500 */
#overlay .dialog {
  margin-top: 90px;
  height: 500px;
  width: 430px;
  background-color: #777;
  border: 0px solid white;
  margin-left: 5px;
}

/* Cabecalho da modal */
.modal{

}
#overlay .dialog .body-dialog {
  float: left;
  height: 100px;
  line-height: 100px;
  width: 90%;
  margin-top: 55px;
}
#overlay .dialog .body-dialog p {
  display: inline-block;
  text-align: center;
  font: 14px roboto;
  color: #EEE;
  vertical-align: middle;
}
#overlay .dialog .body-dialog p span {
  font-weight: 700;
}
/* Butao "Ok amarelo" da modal */
#overlay .dialog .ok-dialog {
  float: right;
  height: 40px;
  width: 40px;
  background-color: #333;
  text-align: center;
  vertical-align: top;
}
#overlay .dialog .ok-dialog [class^="icon-"] {
  line-height: 100px;
  font-size: 30px;
  color: #EEE;
}
#overlay .dialog .ok-dialog:hover {
  background-color: #555;
  cursor: pointer;
}

#overlay #dialog-star .ok-dialog {
  background-color: #CCCC52;
}
#overlay #dialog-star .ok-dialog:hover {
  background-color: #dddd41;
}


