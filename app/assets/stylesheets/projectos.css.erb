/* Modal overlay styling */
#overlay {
  display: none;
  z-index: 5;
  position: fixed;
  top: 0px;
  left: 0px;
  width: 100%;
  height: 100%;

}

/* Modal  500 x 500 */
#overlay .dialog {
  z-index: 10;
  display: none;
  position: absolute;
  margin: auto;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  height: 500px;
  width: 500px;
  background-color: #777;
        border: 10px solid #ccc;
}

/* Cabecalho da modal */
#overlay .dialog .body-dialog {
  float: left;
  height: 100px;
  line-height: 100px;
  width: 90%;
}
#overlay .dialog .body-dialog p {
  display: inline-block;
  text-align: center;
  padding: 10px;
  font: 14px roboto;
  color: #EEE;
  vertical-align: middle;
}
#overlay .dialog .body-dialog p span {
  font-weight: 700;
}
/* Butao "Ok amarelo" da modal */
#overlay .dialog .ok-dialog {
  float: right;
  height: 100px;
  width: 50px;
  background-color: #333;
  text-align: center;
  vertical-align: top;
}
#overlay .dialog .ok-dialog [class^="icon-"] {
  line-height: 100px;
  font-size: 30px;
  color: #EEE;
}
#overlay .dialog .ok-dialog:hover {
  background-color: #555;
  cursor: pointer;
}

#overlay #dialog-star .ok-dialog {
  background-color: #CCCC52;
}
#overlay #dialog-star .ok-dialog:hover {
  background-color: #dddd41;
}


